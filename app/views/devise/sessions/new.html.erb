<div class="user_sign_in" xmlns="http://www.w3.org/1999/html">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <br>
    <div><%= f.label :email %>
      <%= f.email_field :email %></div>

    <div><%= f.label :password %>
      <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> Remember me  <br>
    <% end %>

    <div><br><%= f.submit "Sign in", :class => 'btn btn-small btn-info' %></div>
    <p>Don't have an account? Create Now! <%= link_to "Sign up", new_user_registration_path %></p>
<% end %>
</div>

