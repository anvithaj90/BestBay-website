<script>
    var searchStr = "<%= @searchStr %>";
</script>
<div id="item_list">
  <h4><span>Listing Items</span></h4>

  <div class="row">
    <div class="btn-toolbar">
      <div class="btn-group" data-toggle="button">
        <a class="btn" href="/items?mode=1"><i class="icon-th-list"></i></a>
        <a class="btn" href="/items?mode=2"><i class="icon-th"></i></a>
      </div>
    </div>
    <%= render partial: 'items/search_bar_form', locals: {mode: @mode, category: @category} %>
  </div>
  <%= render partial: 'category_panel', locals: {:parentCategories => @parentCategories,
                                                 :subCategories => @subCategories,
                                                 :selected_parent_cate_id => @selected_parent_cate_id,
                                                 :selected_sub_cate_id => @selected_sub_cate_id,
                                                 :search => @searchStr, :mode => @mode,
  } %>

  <div id="items_panel">
  <% if @mode == '2' %>
      <%= render partial: 'items/gridview', locals: {:items => @items} %>
  <% else %>
      <%= render partial: 'items/listview', locals: {:items => @items} %>
  <% end %>
  </div>
</div>