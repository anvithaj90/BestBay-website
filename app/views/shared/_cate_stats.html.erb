<% @category ||= current_category %>
<div class="stats">
  <a href="<%= following_item_path(@category) %>">
    <strong id="following" class="stat">
      <%= @category.followed_items.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_item_path(@category) %>">
    <strong id="followers" class="stat">
      <%= @category.followers.count %>
    </strong>
    followers
  </a>
</div>